                            table(cellspacing='0', cellpadding='0', border='0', style='width:100%')
                                tbody
                                    tr
                                        td(style="width:100%; padding-left: 24px; padding-top: 36px;color:#fff;font-family:'Open Sans', Arial, Helvetica, sans-serif;font-size:38px;font-weight:300;line-height:38px;text-align:left;", mc:edit='heading')= month.name
