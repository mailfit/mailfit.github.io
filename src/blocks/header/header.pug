mixin header()
    - var mail = project.settings[0];
    if mail.template === 'kf' || mail.template === 'kfpi'
        tr
            td.kf__header
                table(cellpadding='0', style='border-collapse:collapse;', width='100%')
                    tr
                        td.logo
                            a(href=mail.url, target='_blank')
                                if mail.template === 'kf'
                                    img.fluid-img(alt=mail.name, src='https://gallery.mailchimp.com/73ba57b18980bf0adbe74a91c/images/f47a02f4-b4dc-40e8-9c13-d865a8e6ff02.png', style='-ms-interpolation-mode:bicubic;border:0;color:#ff1147;display:block;font-family:Arial,Helvetica,sans-serif;font-size:27px;height:auto;line-height:25px;max-width:126px;text-align:left;width:100%', width='126')
                                else if mail.template === 'kfpi'
                                    img.fluid-img(alt=mail.name, src='https://gallery.mailchimp.com/73ba57b18980bf0adbe74a91c/images/fc969895-4afb-4c84-93c3-077e0c113d18.png', style='-ms-interpolation-mode:bicubic;border:0;color:#ff1147;display:block;font-family:Arial,Helvetica,sans-serif;font-size:27px;height:auto;line-height:25px;max-width:126px;text-align:left;width:100%', width='126')
                        td(style='padding-top:5px;vertical-align:top;')
                            table(cellpadding='0', style='border-collapse:collapse;', width='100%')
                                tr
                                    td(style='vertical-align:top;')
                                        <!--[if (gte mso 9)|(IE)]><table width="130" align="right" border="0" cellpadding="0" cellspacing="0"><tr><td valign="top" width="130" style="width:130px;"><![endif]-->
                                        table.table-btn-2(align='right', cellpadding='0', cellspacing='0', style='border-collapse:separate;max-width:130px;min-width:70px;width:100%;', width='100%')
                                            tbody
                                                tr
                                                    td(height='28')
                                                        a.btn(href=mail.callUrl, target='_blank')
                                                            span Перезвоните мне
                                        <!--[if (gte mso 9)|(IE)]></td></tr></table><![endif]-->

                                tr
                                    td.phone
                                        a(href='tel:' + mail.phoneUrl, target='_blank')
                                            span= mail.phone
    else
        +error('header')




